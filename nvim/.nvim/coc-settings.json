{
  "explorer": {
    "width": 30,
    "icon": {
      "enableVimDevicons": true,
      "enableNerdfont": true
    },
    "buffer": {
      "root": {
        "template": "[icon & 1] OPENED"
      }
    },
    "file": {
      "showHiddenFiles": true,
      "autoReveal": true,
      "root": {
        "template": "[icon & 1] PROJECT ([root])"
      },
      "child": {
        "template": "[git | 2] [selection | clip | 1] [indent][icon | 1] [diagnosticError & 1][filename omitCenter 1][modified][readonly] [linkIcon & 1][link growRight 1 omitCenter 5]"
      }
    },
    "openAction": { "strategy": "sourceWindow" }
  },
  "suggest": {
    "noselect": false
  },
  "diagnostic": {
    "checkCurrentLine": true,
    "refreshOnInsertMode": true,
    "errorSign": "✘",
    "warningSign": "",
    "infoSign": ""
  }
}
